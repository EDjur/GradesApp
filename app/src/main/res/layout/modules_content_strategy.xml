<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manSci_secondYear_strategy_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mansci.gradesapp.manSciModules.Strategy"
    tools:showIn="@layout/modules_activity_strategy">

    <Button
        android:id="@+id/manSci_secondYear_modules_strategy_addAssignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/manSci_secondYear_modules_strategy_gradeNeeded"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:onClick="addAssignment"
        android:text="@string/add_assignment" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_gradeNeeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Exam grade needed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manSci_secondYear_modules_strategy_gradeNeeded"
        android:layout_marginEnd="5dp"
        android:text="For a 1st:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_twoOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manSci_secondYear_modules_strategy_First"
        android:layout_marginEnd="5dp"
        android:text="For a 2.1:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_twoTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manSci_secondYear_modules_strategy_twoOne"
        android:layout_marginEnd="5dp"
        android:text="For a 2.2:"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_Pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manSci_secondYear_modules_strategy_twoTwo"
        android:layout_marginEnd="5dp"
        android:text="For a 3rd/pass:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/manSci_secondYear_button_strategy_calculateGrades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/manSci_secondYear_modules_strategy_addAssignment"
        android:layout_toEndOf="@+id/manSci_secondYear_modules_strategy_addAssignment"
        android:onClick="calculateGrades"
        android:text="@string/calculate_grades_needed" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_First_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_strategy_First"
        android:layout_toEndOf="@id/manSci_secondYear_modules_strategy_First"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_twoOne_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_strategy_twoOne"
        android:layout_alignLeft="@id/manSci_secondYear_modules_strategy_First_grade"
        android:layout_toEndOf="@id/manSci_secondYear_modules_strategy_twoOne"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_twoTwo_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_strategy_twoTwo"
        android:layout_alignLeft="@id/manSci_secondYear_modules_strategy_First_grade"
        android:layout_toEndOf="@id/manSci_secondYear_modules_strategy_twoTwo"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_strategy_pass_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_strategy_Pass"
        android:layout_alignLeft="@id/manSci_secondYear_modules_strategy_First_grade"
        android:layout_toEndOf="@id/manSci_secondYear_modules_strategy_Pass"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />


</RelativeLayout>
