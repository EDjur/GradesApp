<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mansci.gradesapp.ManSciSecondYear"
    tools:showIn="@layout/activity_man_sci_second_year">

    <TextView
        android:id="@+id/secondYear_textview_termOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="@string/modules_termOne"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <!-- Sets the bottom margin -->

    <Button
        android:id="@+id/manSci_secondYear_button_MFOM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/secondYear_textview_termOne"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_MFOM3" />

    <Button
        android:id="@+id/manSci_secondYear_button_strategy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manSci_secondYear_button_MFOM"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_strategy" />

    <Button
        android:id="@+id/manSci_secondYear_button_CT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manSci_secondYear_button_strategy"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_CT" />

    <Button
        android:id="@+id/manSci_secondYear_button_finance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/manSci_secondYear_button_CT"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_finance" />

    <TextView
        android:id="@+id/secondYear_textview_termTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manSci_secondYear_button_finance"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="@string/modules_termTwo"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <!-- Sets the bottom margin -->

    <Button
        android:id="@+id/manSci_secondYear_button_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondYear_textview_termTwo"
        android:layout_centerHorizontal="true"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_design" />

    <Button
        android:id="@+id/manSci_secondYear_button_PTOM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manSci_secondYear_button_design"
        android:layout_centerHorizontal="true"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_PTOM" />

    <Button
        android:id="@+id/manSci_secondYear_button_DA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manSci_secondYear_button_PTOM"
        android:layout_centerHorizontal="true"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_DA" />

    <Button
        android:id="@+id/manSci_secondYear_button_minor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manSci_secondYear_button_DA"
        android:layout_centerHorizontal="true"
        android:onClick="chooseModule"
        android:text="@string/manSci_secondYear_minor" />


</RelativeLayout>
