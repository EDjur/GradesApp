<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manSci_secondYear_ptom_relative_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mansci.gradesapp.manSciModules.PTOM"
    tools:showIn="@layout/modules_activity_ptom">

    <Button
        android:id="@+id/manSci_secondYear_modules_ptom_addAssignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/manSci_secondYear_modules_ptom_gradeNeeded"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:onClick="addAssignment"
        android:text="@string/add_assignment" />

    <Button
        android:id="@+id/manSci_secondYear_button_strategy_calculateGrades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/manSci_secondYear_modules_ptom_addAssignment"
        android:layout_toEndOf="@+id/manSci_secondYear_modules_ptom_addAssignment"
        android:onClick="calculateGrades"
        android:text="@string/calculate_grades_needed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/exam_grade_needed"
        android:id="@+id/manSci_secondYear_modules_ptom_gradeNeeded"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/for_a_first"
        android:id="@+id/manSci_secondYear_modules_ptom_First"
        android:layout_below="@+id/manSci_secondYear_modules_ptom_gradeNeeded"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/for_a_twoOne"
        android:id="@+id/manSci_secondYear_modules_ptom_twoOne"
        android:layout_below="@+id/manSci_secondYear_modules_ptom_First"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/for_a_twoTwo"
        android:id="@+id/manSci_secondYear_modules_ptom_twoTwo"
        android:layout_below="@+id/manSci_secondYear_modules_ptom_twoOne"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/for_a_third"
        android:id="@+id/manSci_secondYear_modules_ptom_pass"
        android:layout_below="@id/manSci_secondYear_modules_ptom_twoTwo"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_ptom_First_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_ptom_First"
        android:layout_toEndOf="@id/manSci_secondYear_modules_ptom_First"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_ptom_twoOne_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_ptom_twoOne"
        android:layout_alignLeft="@id/manSci_secondYear_modules_ptom_First_grade"
        android:layout_toEndOf="@id/manSci_secondYear_modules_ptom_twoOne"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_ptom_twoTwo_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_ptom_twoTwo"
        android:layout_alignLeft="@id/manSci_secondYear_modules_ptom_First_grade"
        android:layout_toEndOf="@id/manSci_secondYear_modules_ptom_twoTwo"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/manSci_secondYear_modules_ptom_pass_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/manSci_secondYear_modules_ptom_pass"
        android:layout_alignLeft="@id/manSci_secondYear_modules_ptom_First_grade"
        android:layout_toEndOf="@id/manSci_secondYear_modules_ptom_pass"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />


</RelativeLayout>
